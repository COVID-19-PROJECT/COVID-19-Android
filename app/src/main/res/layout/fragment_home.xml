<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.main.ui.home.HomeFragment">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_stats"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/xl_margin"
            android:elevation="1dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/md_margin"
                android:layout_marginBottom="@dimen/md_margin">

                <include
                    android:id="@+id/stat_confirmed"
                    layout="@layout/item_stat"></include>
                <View
                    android:id="@+id/divider1"
                    android:layout_width="@dimen/divider_size"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />
                <include
                    android:id="@+id/stat_active"
                    layout="@layout/item_stat"></include>
                <View
                    android:id="@+id/divider2"
                    android:layout_width="@dimen/divider_size"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />
                <include
                    android:id="@+id/stat_recovered"
                    layout="@layout/item_stat"></include>
                <View
                    android:id="@+id/divider3"
                    android:layout_width="@dimen/divider_size"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />
                <include
                    android:id="@+id/stat_dead"
                    layout="@layout/item_stat"></include>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_stats"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/xl_margin"
                android:stretchColumns="1">

                <LinearLayout
                    android:id="@+id/linear_usage"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/md_margin"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/xl_margin"
                        android:text="@string/usage_form"></TextView>
                    <ProgressBar
                        android:id="@+id/progress_bar_usage"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@android:color/transparent"
                        android:indeterminate="true"
                        ></ProgressBar>
                    <WebView android:id="@+id/webview_usage"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></WebView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_tips"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="@dimen/xl_margin"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/md_margin"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/xl_margin"
                        android:text="@string/text_tips"></TextView>
                    <ProgressBar
                        android:id="@+id/progress_bar_tips"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@android:color/transparent"
                        android:indeterminate="true"
                        ></ProgressBar>
                    <WebView android:id="@+id/webview_tips"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </WebView>

                </LinearLayout>

            </TableLayout>
        </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>