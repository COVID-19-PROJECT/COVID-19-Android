<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="60dp" android:layout_width="60dp">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"
                />
            <gradient
                android:angle="90"
                android:endColor="@color/cardview_shadow_end_color"
                android:startColor="@color/cardview_shadow_start_color" />
            <corners
                android:radius="80dp"/>
        </shape>
    </item>
    <item android:drawable="@drawable/twitter_icon"></item>
</layer-list>